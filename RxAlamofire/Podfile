source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

def common
    pod 'Alamofire'
    pod 'RxSwift', '~> 4'
    pod 'RxCocoa', '~> 4'
end

target 'RxAlamofire-iOS-Example' do
    #platform :ios, '9.0'
    common
end

target 'RxAlamofire-tvOS-Example' do
    #platform :tvos, '9.0'
    common
end

target 'RxAlamofire-iOS' do
   common
end

target 'RxAlamofireTests' do
    common
    pod 'OHHTTPStubs', '~> 6.0'
    pod 'OHHTTPStubs/Swift', '~> 6.0'
    pod 'RxBlocking', '~> 4.0'
end

target 'RxAlamofire-tvOS' do
    common
end
