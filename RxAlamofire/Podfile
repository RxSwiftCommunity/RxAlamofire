source "https://github.com/CocoaPods/Specs.git"

use_frameworks!
platform :ios, "10.0"

def common
  pod "Alamofire", "~> 5.0"
  pod "RxSwift", "~> 5.0"
  pod "RxCocoa", "~> 5.0"
end

target "RxAlamofire-iOS" do
  common
end

target "RxAlamofireTests" do
  common
  pod "OHHTTPStubs", "~> 7.0"
  pod "OHHTTPStubs/Swift", "~> 7.0"
  pod "RxBlocking", "~> 4.5"
end


target "RxAlamofire-iOS-Example" do
  common
end

target "RxAlamofire-tvOS" do
  platform :tvos, "10.0"
  common
end

target "RxAlamofire-tvOS-Example" do
  platform :tvos, "10.0"
  common
end

target "RxAlamofire-watchOS" do
  platform :watchos, "3.0"
  common
end

target "RxAlamofire-macOS" do
  platform :osx, "10.12"
  common
end
